<form name="leaveMessageForm" method="post" action="">
    <input type="hidden" name="style" value="{{page.style}}"/>
    <input type="hidden" name="info" value="{{info}}"/>
    <input type="hidden" name="referrer" value="{{referrer}}"/>
    {{#unless groups}}{{#if groupId}}<input type="hidden" name="group" value="{{groupId}}"/>{{/if}}{{/unless}}

    <div class="errors"></div>

    <table cellspacing="1" cellpadding="5" border="0" class="form">
        <tr>
            <th align="right"><label for="leaveMessage_email"><strong>{{l10n "Your email"}}</strong></label></th>
            <td><input id="leaveMessage_email" type="text" name="email" size="50" value="{{email}}" class="username"/></td>
        </tr>
        <tr>
            <th align="right"><label for="leaveMessage_name"><strong>{{l10n "Your name"}}</strong></label></th>
            <td><input id="leaveMessage_name" type="text" name="name" size="50" value="{{name}}" class="username"/></td>
        </tr>
    {{#if groups}}
        <tr>
            <th align="right" class="text"><label for="leaveMessage_department"><strong>{{l10n "Department"}}</strong></label></th>
            <td>
                <select id="leaveMessage_department" name="group" style="min-width:200px;">
                    {{#each groups}}
                        <option value="{{this.id}}" {{#if this.selected}}selected="selected"{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <th align="right"></th>
            <td class="text" id="group-description">
                {{#each groups}}{{#if this.selected}}{{this.description}}{{/if}}{{/each}}
            </td>
        </tr>
    {{/if}}
        <tr>
            <th align="right" valign="top" class="text"><label for="message-leave"><strong>{{l10n "Your message"}}</strong></label></th>
            <td valign="top">
                <textarea id="message-leave" name="message" tabindex="0" cols="40" rows="5">{{message}}</textarea>
            </td>
        </tr>
    {{#if showCaptcha}}
        <tr>
            <th align="right" valign="bottom" class="text">
                <strong>{{l10n "Spam filter"}}</strong>
            </th>
            <td class="text">
                <label for="leaveMessage_captcha"><em>{{l10n "Prove you're a human by copying the code in the picture on the left into the field on the right."}}</em></label>
            </td>
        </tr>
        <tr>
            <td><img id="captcha-img" src="captcha"/></td>
            <td>
                <input id="leaveMessage_captcha" type="text" name="captcha" size="50" maxlength="15" value="" class="username"/>
            </td>
        </tr>
    {{/if}}
    {{#if privacyPolicyUrl}}
        <tr>
            <td></td>
            <td align="left"><em>{{{l10n "Please note that by leaving the message you explicitly agree with the <a href=\"{0}\" target=\"_blank\">Privacy Policy</a>." privacyPolicyUrl}}}</em></td>
        </tr>
    {{/if}}
    </table>
    <div class="text-center" style="margin-top:2rem;">
        <a href="javascript:void(0);" class="btn btn-primary" id="send-message">{{l10n "Send"}}</a>
    </div>
</form>
<div id="ajax-loader"><img src="{{page.stylePath}}/images/ajax-loader.gif" alt="Loading..." /></div>
