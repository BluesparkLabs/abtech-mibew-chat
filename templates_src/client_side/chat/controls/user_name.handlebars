{{#if user.canChangeName}}
    <span class="user-name-control-prefix">{{l10n "You are"}}</span>
    {{#if nameInput}}
        <div class="user-name-control-input-background">
          <input id="user-name-control-input" type="text" size="12" value="{{user.name}}" class="user-name-control-input" autocomplete="off" />
        </div>
        <a href="javascript:void(0)" class="user-name-control-set" title="{{l10n "Change name"}}"></a>
    {{else}}
        <a href="javascript:void(0)" class="user-name-control-change" title="{{l10n "Change name"}}">{{user.name}}</a>
        <a href="javascript:void(0)" class="user-name-control-change icon-pencil" title="{{l10n "Change name"}}"></a>
    {{/if}}
{{else}}
{{l10n "You are"}}&nbsp;{{user.name}}
{{/if}}
